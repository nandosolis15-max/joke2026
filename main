# A list of joke topics the user can choose from
topics = ["robbers", "tanks", "pencils"]

def tell_joke(topic):
    # Prints the joke based on the topic given.
        
# If the user chose the "robbers" joke
    if topic == "robbers":
        input("Knock Knock: ")      # User asks who?
        input("Calder: ")           # User asks Calder who?
        print("Calder police I've been robbed!")  # Punchline

 # If the user chose the "tanks" joke
    elif topic == "tanks":
        input("Knock Knock: ")      
        input("Tank: ")             
        print("You are welcome!") 

# If the user chose the "pencils" joke
    elif topic == "pencils":
        input("Knock Knock: ")
        input("Broken pencil: ")
        print("Nevermind, it's pointless!") 
    
def ask_for_topic(topics_list):
    """Asks the user which joke they want and returns their choice."""
                                                                                                                
# Show the user the list of available topics
    print("Choose a topic:", topics_list)

# Ask the user which topic they want
    choice = input("Which one do you want? ")
                                                                                                                                        
# Return their answer back to the main program
    return choice


def main():
# Ask the user if they want to hear a joke at all
    answer = input("Do you want to hear a joke? ")

# If they say no, end the program early
    if answer == "no":
        print("Okay, maybe next time!")
    return  # Stops the program
    
while answer == "yes":
        print("Great, let's play!")
        # Ask the user which topic they want
topic_choice = ask_for_topic(topics)

# Check if the topic is valid (exists in the list)
if topic_choice in topics:
     tell_joke(topic_choice)  # Call the joke function
else:
      print("Sorry, I don't know that topic.")
# Ask if they want another joke or if they are finished
answer = input("Do you want to hear another joke or are you finished? ")

 # If the user says they are finished, ask for feedback
if answer == "finished":
        rating = int(input("Please rate our game 1/10: "))  # Convert rating to a number
        score = rating * 10  # Turn rating into a percentage
        print("Your satisfaction rate is " + str(score) + "%")

main()